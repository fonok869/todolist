<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="003-create-todos-table" author="liquibase">
        <createTable tableName="todos">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(500)">
                <constraints nullable="true"/>
            </column>
            <column name="ranking" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="done" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="category_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="date_created" type="TIMESTAMP">
                <constraints nullable="true"/>
            </column>
            <column name="audit_date_created" type="TIMESTAMP">
                <constraints nullable="true"/>
            </column>
            <column name="audit_date_modified" type="TIMESTAMP">
                <constraints nullable="true"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="todos"
                baseColumnNames="category_id"
                constraintName="fk_todos_category"
                referencedTableName="categories"
                referencedColumnNames="id"
                onDelete="CASCADE"/>

        <addForeignKeyConstraint
                baseTableName="todos"
                baseColumnNames="user_id"
                constraintName="fk_todos_user"
                referencedTableName="users"
                referencedColumnNames="id"
                onDelete="CASCADE"/>

        <rollback>
            <dropForeignKeyConstraint baseTableName="todos" constraintName="fk_todos_category"/>
            <dropForeignKeyConstraint baseTableName="todos" constraintName="fk_todos_user"/>
            <dropTable tableName="todos"/>
        </rollback>
    </changeSet>

</databaseChangeLog>