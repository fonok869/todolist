<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="004-add-email-validation-fields" author="liquibase">
        <addColumn tableName="users">
            <column name="email_validated" type="BOOLEAN" defaultValue="false">
                <constraints nullable="false"/>
            </column>
            <column name="email_validation_token" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="email_validation_token_expiry" type="TIMESTAMP">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <rollback>
            <dropColumn tableName="users">
                <column name="email_validated"/>
                <column name="email_validation_token"/>
                <column name="email_validation_token_expiry"/>
            </dropColumn>
        </rollback>
    </changeSet>

</databaseChangeLog>